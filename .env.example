# Gemini CLI WebUI 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# Gemini API 配置
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
# 可选模型: gemini-pro, gemini-pro-vision, gemini-1.5-pro, gemini-1.5-flash

# 适配器配置
# 可选值: mock, subprocess, core, api
GEMINI_ADAPTER_TYPE=mock

# 如果使用 subprocess 适配器，指定 gemini 可执行文件路径
GEMINI_EXECUTABLE_PATH=gemini

# 如果使用 api 适配器，指定 API 端点
GEMINI_API_ENDPOINT=http://localhost:8080

# 应用配置
NODE_ENV=development
PORT=3000
HOST=localhost

# 数据库配置（如果需要）
DATABASE_URL=sqlite://./data/gemini-webui.db

# 会话配置
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=3600000

# 安全配置
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:5173

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 功能开关
ENABLE_WEBSOCKET=true
ENABLE_METRICS=true
ENABLE_TOOL_SANDBOX=false
ENABLE_MCP_SERVERS=false

# 工具审批策略
# 可选值: auto, user, admin
DEFAULT_TOOL_APPROVAL_LEVEL=user

# 性能配置
MAX_CONCURRENT_SESSIONS=10
MAX_MESSAGE_LENGTH=10000
REQUEST_TIMEOUT=60000

# 开发配置
DEBUG_MODE=false
HOT_RELOAD=true